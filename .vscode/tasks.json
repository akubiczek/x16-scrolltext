{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "x16-build-and-run",
            "type": "shell",
            "command": "/usr/local/bin/cl65 -t cx16 -l ${workspaceFolder}/build/main.lst -o ${workspaceFolder}/build/main.prg -u __EXEHDR__ ${workspaceFolder}/${relativeFile} && /usr/local/bin/x16emu -scale 4 -prg ${workspaceFolder}/build/main.prg -run -debug",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": ["$ca65", "$ld65", "$ld65-config", "$ld65-unresolved"]
        }
    ]
}